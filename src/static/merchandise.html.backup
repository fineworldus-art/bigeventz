    <style>
        .merch-hero {
            background: linear-gradient(135deg, #ff6f61 0%, #ffca28 100%);
            color: white;
            padding: 80px 20px;
            text-align: center;
            box-shadow: 0 4px 20px rgba(255, 111, 97, 0.3);
        }
        .merch-hero h1 {
            font-size: 48px;
            margin-bottom: 20px;
        }
        .merch-container {
            max-width: 1400px;
            margin: 60px auto;
            padding: 0 20px;
            background: #f5f5f5;
        }
        .filter-section {
            display: flex;
            gap: 15px;
            margin-bottom: 40px;
            flex-wrap: wrap;
        }
        .filter-btn {
            padding: 12px 28px;
            border: 2px solid #ff6f61;
            background: white;
            color: #ff6f61;
            border-radius: 30px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: 600;
            font-family: 'Poppins', sans-serif;
        }
        .filter-btn:hover,
        .filter-btn.active {
            background: linear-gradient(135deg, #ff6f61 0%, #ffca28 100%);
            color: white;
            border-color: transparent;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(255, 111, 97, 0.4);
        }
        .products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 30px;
        }
        .product-card {
            background: white;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            border: 1px solid #e0e0e0;
        }
        .product-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 8px 30px rgba(255, 111, 97, 0.3);
            border-color: #ff6f61;
        }
        .product-image {
            width: 100%;
            height: 280px;
            object-fit: cover;
        }
        .product-info {
            padding: 20px;
        }
        .product-category {
            color: #ff6f61;
            font-size: 11px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 2px;
            font-family: 'Poppins', sans-serif;
        }
        .product-name {
            font-size: 22px;
            font-weight: 700;
            margin: 10px 0;
            color: #333333;
            font-family: 'Poppins', sans-serif;
        }
        .product-description {
            color: #666;
            font-size: 14px;
            line-height: 1.6;
            margin-bottom: 15px;
        }
        .product-price {
            font-size: 28px;
            font-weight: bold;
            color: #ffca28;
            margin-bottom: 15px;
            font-family: 'Poppins', sans-serif;
        }
        .add-to-cart-btn {
            width: 100%;
            padding: 14px;
            background: linear-gradient(135deg, #ff6f61 0%, #ffca28 100%);
            color: white;
            border: none;
            border-radius: 50px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 16px;
            text-transform: uppercase;
            letter-spacing: 1px;
            box-shadow: 0 4px 15px rgba(255, 111, 97, 0.3);
        }
        .quantity-selector {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 15px;
            margin-bottom: 15px;
        }
        .quantity-btn {
            width: 36px;
            height: 36px;
            border: 2px solid #ff6f61;
            background: white;
            color: #ff6f61;
            border-radius: 50%;
            font-size: 20px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .quantity-btn:hover {
            background: #ff6f61;
            color: white;
            transform: scale(1.1);
        }
        .quantity-input {
            width: 60px;
            height: 36px;
            text-align: center;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            color: #333;
        }
        .add-to-cart-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(255, 111, 97, 0.5);
        }

    </style>
